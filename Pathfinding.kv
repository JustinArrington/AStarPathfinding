<ScatterTextWidget>:
    orientation: 'vertical'
    Label:
        id: topUI
        text: "topUI"
        font_size: 50
        size_hint_y: .1
    RelativeLayout:
        id: rLayout


    BoxLayout:
        size_hint_y: .1
        Button:
            id: btn_refreshGrid
            text: "refresh grid"

            font_size: 40
            on_release: root.refreshClicked()
        Button:
            id: btn_drawGrid
            text: "draw grid"

            font_size: 40
            on_release: root.drawGridClicked()
        Button:
            id: btn_runSearch
            text: "run search"

            font_size: 40
            on_release: root.startSearch()

